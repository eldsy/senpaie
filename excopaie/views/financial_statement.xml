<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="excopaie.financial_statementlist">
      <field name="name">excopaie.financial_statement.view</field>
      <field name="model">excopaie.financial_statement</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="date_from"/>
            <field name="date_to"/>
        </tree>
      </field>
    </record>
      
      
    <!-- explicit form definition -->

    <record model="ir.ui.view" id="excopaie.financial_statementform">
      <field name="name">excopaie.financial_statement.form</field>
      <field name="model">excopaie.financial_statement</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <div class="oe_title">
                    <h3>
                      <field name="name"/>
                    </h3>
                </div>                    
                <group>
                    <group>
                        <field name="date_from"/>
                    </group>

                    <group>
                        <field name="date_to"/>
                    </group>
                </group>
            </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="excopaie.financial_statement_action_window">
      <field name="name">Etats</field>
      <field name="res_model">excopaie.financial_statement</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face"> Gerer vos etats ici
        </p>
      </field>
    </record>
    
    <!-- server action to the one above -->
      
    <record model="ir.actions.server" id="excopaie.financial_statement_action_server">
      <field name="name">excopaie etat</field>
      <field name="model_id" ref="model_excopaie_financial_statement"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- actions -->

    <menuitem name="Etats" id="excopaie.financial_statement" parent="hr_payroll.menu_hr_payroll_payslips" sequence="50"
              action="excopaie.financial_statement_action_window"/>
      
  </data>
</odoo>